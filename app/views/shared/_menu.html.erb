
<div id="menu-bar">
<% if current_user %>

        <div class="dropdown">
            <button class="dropbtn">Navigation</button>
            <div class="dropdown-content">
                <% if session[:user_id] %>
                    <% unless current_page?(users_path) || current_user.user_level == 0 %>
                            <a href="/users">Dashboard</a>
                    <% end %>
                            <a href="/sessions" data-method="delete">Logout</a>
                            <a href="/computers">Tech Inventory</a>
                <% end %>
            </div>
        </div>

        <div class="dropdown">
        <button class="dropbtn">Color Theme</button>
        <div class="dropdown-content">
            <a href="/colors/3">Default</a>
            <% current_user.stores.each do |store| %>
                <a href="/colors/<%= store.school.color.id %>">
                    <%= store.store_number %>
                </a>
            <% end %>
        </div>
        </div>

        <% unless current_page?(new_computer_path) || current_user.stores.length <= 1 %>

            <div class="dropdown">
            <button class="dropbtn">Store Selection</button>
            <div class="dropdown-content">
                <% current_user.stores.each do |store| %>
                    <a id="store_choice" href="/storeset/<%= store.id %>">
                        <%= store.store_number %>
                    </a>
                <% end %>
            </div>
            </div>
            </div>

        <% end %>

<% end %>

</div>


  

        
    










